<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity">


       <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/layout_ages_teenager"
            android:background="@color/PASTEL_BLUE"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="10대"
                android:textColor="@color/WHITE"
                android:id="@+id/textView_age_teenager"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/layout_ages_youth"
            android:background="@color/PASTEL_GREEN"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="20대"
                android:textColor="@color/WHITE"
                android:id="@+id/textView_age_youth"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/layout_ages_senior"
            android:background="@color/PASTEL_ORANGE"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="30대"
                android:textColor="@color/WHITE"
                android:id="@+id/textView_age_senior"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:id="@+id/layout_ages_middleAge"
            android:background="@color/CHERRY_RED"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="40대 이상"
                android:textColor="@color/WHITE"
                android:id="@+id/textView_age_middleAge"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50dp" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>
