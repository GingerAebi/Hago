<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    tools:context="jaebong.hago.Activities.ResultListActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_search" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/FAB_searchResult_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_plus"
        android:scaleType="fitCenter"
        fab:fab_colorNormal="@color/PASTEL_BLUE"
        fab:fab_colorPressed="@color/CHERRY_RED"
        fab:fab_colorRipple="@color/PASTEL_GREEN"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="15dp" />
</RelativeLayout>
