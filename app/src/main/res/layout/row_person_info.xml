<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView_row_personInfo_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_coffee"
        android:scaleType="fitXY"
        android:layout_margin="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="카페 라떼"
        android:id="@+id/textView_row_personInfo_menu"
        android:layout_alignTop="@+id/imageView_row_personInfo_menu"
        android:layout_toRightOf="@+id/imageView_row_personInfo_menu"
        android:layout_toEndOf="@+id/imageView_row_personInfo_menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="2015.10.19"
        android:id="@+id/textView_row_personInfo_date"
        android:layout_alignTop="@+id/textView_row_personInfo_menu"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이 곳은 메모를 위해 할당된 공간입니다. 고객의 메모에 대한 정보를 순차적으로 보여줍니다. "
        android:id="@+id/textView_row_personInfo_memo"
        android:layout_below="@+id/textView_row_personInfo_menu"
        android:layout_alignLeft="@+id/textView_row_personInfo_menu"
        android:layout_alignStart="@+id/textView_row_personInfo_menu"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp" />
</RelativeLayout>